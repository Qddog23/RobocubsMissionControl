[Unit]
Description=Mission Control Server Service
After=network.target

[Service]
RuntimeDirectory=missioncontrol
User=pi
Group=pi
WorkingDirectory=/home/pi/RobocubsMissionControl/CartInformationDisplays
ExecStart=/home/pi/RobocubsMissionControl/CartInformationDisplays/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target